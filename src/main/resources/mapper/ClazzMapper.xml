<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiaolin.mapper.ClazzMapper">
    <select id="page" resultType="com.xiaolin.pojo.Clazz">
        select *
        from clazz
        <where>
            <if test="condition">
            </if>
        </where>
        order by update_time desc
    </select>

    <insert id="insert">
        insert into clazz() value (#{name} )
    </insert>

    <update id="update">
        update clazz set name = #{name} where id = #{id}
    </update>

    <delete id="delete">
        delete
        from clazz
        where id = #{id}
    </delete>

    <delete id="info">
        select *
        from clazz
        where id = #{id}
    </delete>

    <select id="list" resultType="com.xiaolin.pojo.Clazz">
        select *
        from clazz;
    </select>

    <select id="countStudentCountData" resultType="java.util.Map">
        select (case gender
                    when 1 then '男性'
                    when 2 then '女性'
                    else '其他' end) name,
               count(*)              value
        from student
        group by clazz_id
    </select>
</mapper>