<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiaolin.mapper.DeptMapper">
    <delete id="delete" parameterType="java.lang.Integer">
        <!--@mbg.generated-->
        delete
        from dept
        where id = #{id,jdbcType=INTEGER}
    </delete>
    <insert id="insert" keyColumn="id" keyProperty="id" parameterType="com.xiaolin.pojo.Dept" useGeneratedKeys="true">
        <!--@mbg.generated-->
        insert into dept (`name`, create_time, update_time)
        values (#{name,jdbcType=VARCHAR}, now(), now())
    </insert>

    <update id="update" parameterType="com.xiaolin.pojo.Dept">
        <!--@mbg.generated-->
        update dept
        <set>
            <if test="name != null">
                name = #{name,jdbcType=VARCHAR},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime,jdbcType=TIMESTAMP},
            </if>
        </set>
        where id = #{id,jdbcType=INTEGER}
    </update>

    <select id="list" resultType="com.xiaolin.pojo.Dept">
        select *
        from dept
    </select>
</mapper>